\mode<presentation>

% Frame title
\defbeamertemplate*{frametitle}{thk}[1][]
{
\vskip1cm%
    \begin{beamercolorbox}[wd=\paperwidth,ht=0cm]{frametitle} 
        \begin{tikzpicture}
            \fill[thk-orange, opacity=0.1] (0,0.8) rectangle(\the\paperwidth,2.9);
            \ifx\insertframesubtitle\@empty%
                {\node[anchor=west, black,font=\large] at (1,1.5){\insertframetitle};}
            \else%
                {\node[anchor= west, black,font=\large] at (1,1.7){\insertframetitle};%
                \node[anchor= west, black,font=\small] at (1,1.3){\insertframesubtitle};}%
            \fi
        \end{tikzpicture}
    \end{beamercolorbox}
}

